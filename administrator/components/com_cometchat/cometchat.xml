<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
	<name>CometChat</name>
	<creationDate>28/05/2014</creationDate>
	<author>CometChat</author>
	<authorEmail>support@cometchat.com</authorEmail>
	<authorUrl>http://www.cometchat.com</authorUrl>
	<copyright>Inscripts</copyright>
	<license></license>
	<version>1.0</version>
	<description>Enable audio/video/text chat on your Joomla site in minutes and increase user activity exponentially!</description>
	<scriptfile>installer.php</scriptfile>
	<administration>
		<menu>COM_COMETCHAT</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>cometchat.php</filename>
			<filename>menus.php</filename>
			<filename>cc_sys_plugin.zip</filename>
		</files>		
		<languages folder="admin">
				<language tag="en-GB">languages/en-GB.com_cometchat.ini</language>
				<language tag="en-GB">languages/en-GB.com_cometchat.sys.ini</language>
		</languages>
	</administration>	
</extension>