<?xml version="1.0" encoding="UTF-8"?>
<form addfieldpath="/administrator/components/com_jkcommodity/models/fields">
	<fields name="parent">
		<fieldset name="detail">
			<field name="name"
				type="text"
				label="COM_JKCOMMODITY_LABEL_PARENT"
				class="input-large"
			/>
		</fieldset>
	</fields>
	<fields>
		<fieldset name="detail">
			<field name="id"
				type="althidden"
				readonly="true" 
			/>
			<field name="name"
				type="text"
				label="COM_JKCOMMODITY_LABEL_NAME"
				class="input-large"
			/>
			<field name="key"
				type="text"
				label="COM_JKCOMMODITY_LABEL_CODE_CATEGORY"
				class="input-large"
			/>
		</fieldset>
		<fieldset name="edit">
			<field name="id"
				type="althidden"
				readonly="true" 
			/>
			<field name="parent_id"
				type="categories"
				label="COM_JKCOMMODITY_LABEL_PARENT"
				class="input-xlarge"
			>
			    <option>COM_JKCOMMODITY_FIELD_NO_CATEGORY</option>
			</field>
			<field name="name"
				type="text"
				label="COM_JKCOMMODITY_LABEL_NAME"
				class="input-large"
				required="true" 
			/>
			<field name="type"
				type="list"
				label="COM_JKCOMMODITY_LABEL_TYPE"
				class="input-xlarge"
				required="true" 
			>
			    <option>COM_JKCOMMODITY_FIELD_NO_TYPE</option>
			    <option value="consumer">COM_JKCOMMODITY_LABEL_CONSUMER</option>
			    <option value="producer">COM_JKCOMMODITY_LABEL_PRODUCER</option>
			</field>
			<field name="key"
				type="text"
				label="COM_JKCOMMODITY_LABEL_CODE_CATEGORY"
				class="input-large"
			/>
		</fieldset>
