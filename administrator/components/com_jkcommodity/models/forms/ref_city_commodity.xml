<?xml version="1.0" encoding="UTF-8"?>
<form addfieldpath="/administrator/components/com_jkcommodity/models/fields">
	<fields>
		<fieldset name="edit">
			<field name="id"
				type="althidden"
				readonly="true" 
			/>
			<field name="name"
				type="text"
				label="COM_JKCOMMODITY_LABEL_NAME"
				class="input-large"
			/>
			<field name="type"
				type="list"
				label="COM_JKCOMMODITY_LABEL_TYPE"
				class="input-xlarge"
				required="true" 
			>
			    <option value="producer">COM_JKCOMMODITY_LABEL_PRODUCER</option>
			    <option value="consumer">COM_JKCOMMODITY_LABEL_CONSUMER</option>
			</field>
			<field name="key"
				type="text"
				label="COM_JKCOMMODITY_LABEL_CODE_CITY"
				class="input-large"
			/>		
		</fieldset>
	</fields>
</form>
