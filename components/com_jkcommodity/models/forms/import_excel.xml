<?xml version="1.0" encoding="UTF-8"?>
<form addfieldpath="/administrator/components/com_jkcommodity/models/fields">
    <fields>
		<fieldset name="main">
			<field name="format_id"
				type="format"
				label="COM_JKCOMMODITY_LABEL_FORMAT"
				class="input-xlarge"
				required="true" 
			>
				<option>COM_JKCOMMODITY_FIELD_NO_FORMAT</option>
			</field>
			<field name="date"
				type="calendar"
				id="date"
				label="COM_JKCOMMODITY_LABEL_DATE"
				class="input-medium"
				format="%d-%m-%Y"
				filter=" "
				required="true"
			/>
			<field name="file_excel"
			    type="file"
			    accept="application/vnd.ms-excel, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
				label="COM_JKCOMMODITY_LABEL_FILE"
				class="input-xlarge"
				required="true"
			/>
		</fieldset>
	</fields>
</form>
