<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.7" client="site" method="upgrade">
  <name>mod_gtpihps_map</name>
  <author>Joomlaku</author>
  <authorEmail>info@joomlaku.net</authorEmail>
  <authorUrl>http://www.joomlaku.net</authorUrl>
  <creationDate>September 2012</creationDate>
  <copyright>Copyright (C) 2012. All rights reserved.</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <version>1.0.0</version>
  <description>MOD_GTPIHPS_QUICKPRICEFIND_XML_DESCRIPTION</description>
  <files>
    <filename module="mod_gtpihps_map">mod_gtpihps_map.php</filename>
    <folder>tmpl</folder>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <filename>mod_gtpihps_map.xml</filename>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.mod_gtpihps_map.ini</language>
    <language tag="en-GB">en-GB/en-GB.mod_gtpihps_map.sys.ini</language>    
  </languages>
  <config>
    <fields name="params">
      <fieldset name="advanced">
        <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
        <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
        <field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
          <option value="1">JGLOBAL_USE_GLOBAL</option>
          <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        </field>
        <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
        <field name="cachemode" type="hidden" default="static">
          <option value="static"/>
        </field>
      </fieldset>
    </fields>
  </config>
</extension>
